<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastra_produtos">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textSize="17dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="29dp"
        android:text="Nome do produto que deseja cadastrar" />

    <EditText
        android:id="@+id/TituloCampo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:hint="TÃ­tulo do produto"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/CampoQte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignParentTop="true"
        android:textSize="17dp"
        android:layout_marginTop="115dp"
        android:text="Quantidade" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="410dp"
        android:hint="Quantidade"
        android:inputType="number" />

    <include
        android:layout_marginTop="190dp"
        layout="@layout/fileira_bt_cadastrar_produto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</RelativeLayout>