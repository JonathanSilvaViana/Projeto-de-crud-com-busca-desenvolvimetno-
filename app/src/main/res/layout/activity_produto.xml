<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Produto_Activity">

    <TextView
        android:id="@+id/label_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titulo_produto_selecionado"
        android:layout_alignParentTop="true"
        android:textSize="17dp"
        android:layout_marginTop="18dp"
        android:text="Produto selecionado:" />

    <EditText
        android:id="@+id/titulo_produto_selecionado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_produto"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />


    <TextView
        android:id="@+id/label_qtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_produto"
        android:textSize="17dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="286dp"
        android:text="Quantidade:" />

    <EditText
        android:id="@+id/qtd_produto_selecionado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:inputType="number"
        android:text="" />


    <include
        android:layout_marginTop="190dp"
        layout="@layout/botoes_update_produto_selecionado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</RelativeLayout>