<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/barradebusca"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="@string/hint_pesquisa"
        android:color="#69f0ee"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:divider="#c6ff00"
        android:layout_alignParentTop="true"
        android:id="@+id/_dynamic"
        android:layout_marginTop="117dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/_dynamic"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-117dp"
        android:text=" Lista de produtos"
        android:textAlignment="center"
        android:textFontWeight="bolder"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/bt_FazBusca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barradebusca"
        android:layout_centerHorizontal="true"
        android:text="Realizar busca" />

</RelativeLayout>